<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="nimasystems" translate="label" sortOrder="-9999">
            <label>Nimasystems</label>
        </tab>
        <section id="nimasystems" translate="label" type="text" sortOrder="-9999" showInDefault="1" showInWebsite="1"
                 showInStore="1">
            <tab>nimasystems</tab>
            <label>Nimasystems</label>
            <resource>Nimasystems_Freshchat::config</resource>
            <group id="generic" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1"
                   showInStore="1">
                <label>Chat Settings</label>
                <field id="freshdesk_enable_livechat" type="select" showInDefault="1" showInWebsite="1" showInStore="1" sortOrder="20"
                       translate="label">
                    <label>Freshdesk Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="freshdesk_widget_js_src" translate="label" type="text" sortOrder="21" showInDefault="1"
                       showInWebsite="1"
                       showInStore="1">
                    <label>Freshdesk Widget Javascript Src</label>
                </field>
            </group>
        </section>
    </system>
</config>
