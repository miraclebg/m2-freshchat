<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="nimasystems" translate="label" sortOrder="-9999">
            <label>Nimasystems</label>
        </tab>
        <section id="nimasystems_freshchat" translate="label" type="text" sortOrder="-9999" showInDefault="1"
                 showInWebsite="1"
                 showInStore="1">
            <tab>nimasystems</tab>
            <label>Freshchat</label>
            <resource>Nimasystems_Freshchat::config</resource>
            <group id="freshchat" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1"
                   showInStore="1">
                <label>Chat Settings</label>
                <field id="enabled" type="select" showInDefault="1" showInWebsite="1" showInStore="1"
                       sortOrder="20"
                       translate="label">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="token" translate="label" type="text" sortOrder="21" showInDefault="1"
                       showInWebsite="1"
                       showInStore="1">
                    <label>Token</label>
                </field>
                <field id="host" translate="label" type="text" sortOrder="22" showInDefault="1"
                       showInWebsite="1"
                       showInStore="1">
                    <label>Host</label>
                </field>
                <field id="site_id" translate="label" type="text" sortOrder="23" showInDefault="1"
                       showInWebsite="1"
                       showInStore="1">
                    <label>Site ID</label>
                </field>
            </group>
        </section>
    </system>
</config>
